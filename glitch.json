{
  "install": "pip3 install --user -r requirements.txt",
  "start": "python3 -u server.py",
  "watch": {
    "ignore": [
      "\\.pyc$"
    ],
    "install": {
      "include": [
        "^requirements\\.txt$",
        "^\\.env$"
      ]
    },
    "restart": {
      "include": [
        "\\.py$",
        "^start\\.sh"
      ]
    },
    "throttle": 5000
  }
}
